@model E_com_Web.Models.Admin.LoginViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Login";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="max-width: 420px; width: 100%; border-radius: 16px;">
        <div class="text-center mb-4">
            <img src="~/images/admin-logo.png" alt="Admin Logo" style="width:80px; height:auto;" />
            <h2 class="mt-3 text-dark fw-bold">Admin Portal</h2>
            <p class="text-muted">Sign in to manage your dashboard</p>
        </div>

        <form asp-area="Admin" asp-controller="Auth" asp-action="Login" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold">Username</label>
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-pill">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </button>
    <div class="text-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>
</form>
