@model E_com_Web.Models.Shoe
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Product";
    var categories = ViewBag.Categories as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<div class="container py-3">
    <h3 class="mb-3"><i class="bi bi-plus-circle me-2"></i>Create Product</h3>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
                @Html.AntiForgeryToken()
                <div class="col-md-6">
                    <label class="form-label">Name</label>
                    <input name="name" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Category</label>
                    <select name="category" class="form-select" required>
                        <option value="" disabled selected>Select category</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c">@c</option>
                        }
                    </select>
                </div>
                <div class="col-12">
                    <label class="form-label">Description</label>
                    <textarea name="description" rows="4" class="form-control"></textarea>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Price</label>
                    <input name="price" type="number" step="0.01" min="0" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Quantity</label>
                    <input name="quantity" type="number" min="0" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Image</label>
                    <input name="image" type="file" accept="image/*" class="form-control" />
                </div>
                <div class="col-12 d-flex gap-2">
                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-light">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
