@model E_com_Web.Models.Shoe
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product Details";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0"><i class="bi bi-box-seam me-2"></i>@Model.Name</h3>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square me-1"></i>Edit</a>
            <a class="btn btn-light" asp-area="Admin" asp-controller="Products" asp-action="Index">Back</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.ImageUrl" class="w-100 h-100 object-fit-cover" alt="@Model.Name" />
            </div>
            <div class="col-md-7">
                <div class="p-4">
                    <div class="mb-2 text-muted">@Model.Brand Â· @Model.Category</div>
                    <p class="mb-3">@Model.Description</p>
                    <div class="h4 mb-3">@Model.Price.ToString("C")</div>
                    <div class="mb-3">
                        <span class="badge bg-primary-subtle text-primary me-1">Stock: @Model.Stock</span>
                        @if (Model.Rating.HasValue) { <span class="badge bg-warning-subtle text-warning"><i class="bi bi-star-fill me-1"></i>@Model.Rating</span> }
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
