@model E_com_Web.Areas.Admin.Models.DashboardStats
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <div class="mb-4">
        <h2><i class="bi bi-speedometer2 me-2"></i>Dashboard</h2>
        <p class="text-muted">Monitor your store performance with real-time data</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-receipt fs-4 text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Total Orders</div>
                            <h3 class="mb-0">@Model.TotalOrders</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-success bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-currency-dollar fs-4 text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Total Revenue</div>
                            <h3 class="mb-0">$@Model.TotalRevenue.ToString("N2")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-info bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-box-seam fs-4 text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Total Products</div>
                            <h3 class="mb-0">@Model.TotalProducts</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-warning bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-exclamation-triangle fs-4 text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Low Stock</div>
                            <h3 class="mb-0">@Model.LowStockProducts</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders by Status -->
    <div class="row g-3 mb-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Orders by Status</h5>
                </div>
                <div class="card-body">
                    @if (Model.OrdersByStatus.Any())
                    {
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var status in Model.OrdersByStatus)
                                {
                                    <tr>
                                        <td>
                                            @if (status.Key == "Pending")
                                            {
                                                <span class="badge bg-warning text-dark">@status.Key</span>
                                            }
                                            else if (status.Key == "Processing")
                                            {
                                                <span class="badge bg-info">@status.Key</span>
                                            }
                                            else if (status.Key == "Completed" || status.Key == "Shipped")
                                            {
                                                <span class="badge bg-success">@status.Key</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@status.Key</span>
                                            }
                                        </td>
                                        <td class="text-end"><strong>@status.Value</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No orders yet</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-grid me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-receipt me-2"></i>View All Orders
                        </a>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-outline-success">
                            <i class="bi bi-box-seam me-2"></i>Manage Products
                        </a>
                        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" asp-route-status="Pending" class="btn btn-outline-warning">
                            <i class="bi bi-clock me-2"></i>Pending Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Orders</h5>
            <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="card-body">
            @if (Model.RecentOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td><strong>#@order.Id</strong></td>
                                    <td>@order.Customer.FullName</td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td><strong>$@order.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @if (order.OrderStatus == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">@order.OrderStatus</span>
                                        }
                                        else if (order.OrderStatus == "Processing")
                                        {
                                            <span class="badge bg-info">@order.OrderStatus</span>
                                        }
                                        else if (order.OrderStatus == "Completed" || order.OrderStatus == "Shipped")
                                        {
                                            <span class="badge bg-success">@order.OrderStatus</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.OrderStatus</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0 text-center py-4">No orders yet. Orders will appear here as customers place them.</p>
            }
        </div>
    </div>
</div>
