@model E_com_Web.Models.CartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<section class="cart-page">
    <div class="container">
        <h1>Shopping Cart</h1>
        
        @if (Model.Items.Any())
        {
            <div class="cart-container">
                <div class="cart-items">
                    @foreach (var item in Model.Items)
                    {
                        <div class="cart-item">
                            <img src="@item.ImageUrl" alt="@item.Name" />
                            <div class="cart-item-info">
                                <h3>@item.Name</h3>
                                <p>Size: @item.Size | Color: @item.Color</p>
                                <p class="price">$@item.Price.ToString("F2")</p>
                            </div>
                            <div class="cart-item-controls">
                                <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="quantity-form">
                                    <input type="hidden" name="shoeId" value="@item.ShoeId" />
                                    <label>Qty:</label>
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" 
                                           onchange="this.form.submit()" />
                                </form>
                                <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="shoeId" value="@item.ShoeId" />
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                            </div>
                            <div class="cart-item-total">
                                <p>$@item.Total.ToString("F2")</p>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="cart-summary">
                    <h2>Order Summary</h2>
                    <div class="summary-row">
                        <span>Subtotal:</span>
                        <span>$@Model.Subtotal.ToString("F2")</span>
                    </div>
                    <div class="summary-row">
                        <span>Tax:</span>
                        <span>$@Model.Tax.ToString("F2")</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total:</span>
                        <span>$@Model.Total.ToString("F2")</span>
                    </div>
                    <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary btn-large">Proceed to Checkout</a>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
                </div>
            </div>
        }
        else
        {
            <div class="empty-cart">
                <p>Your cart is empty.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Start Shopping</a>
            </div>
        }
    </div>
</section>

