@model E_com_Web.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<section class="checkout-page">
    <div class="container">
        <h1>Checkout</h1>
        
        <div class="checkout-container">
            <div class="checkout-form-container">
                <form asp-controller="Checkout" asp-action="ProcessOrder" method="post">
                    @Html.AntiForgeryToken()
                    
                    <h2>Shipping Information</h2>
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FirstName">First Name *</label>
                            <input asp-for="FirstName" required />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Last Name *</label>
                            <input asp-for="LastName" required />
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Email">Email *</label>
                        <input type="email" asp-for="Email" required />
                        <span asp-validation-for="Email"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Phone">Phone *</label>
                        <input type="tel" asp-for="Phone" required />
                        <span asp-validation-for="Phone"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Address">Address *</label>
                        <input asp-for="Address" required />
                        <span asp-validation-for="Address"></span>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="City">City *</label>
                            <input asp-for="City" required />
                            <span asp-validation-for="City"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="State">State *</label>
                            <input asp-for="State" required />
                            <span asp-validation-for="State"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ZipCode">Zip Code *</label>
                            <input asp-for="ZipCode" required />
                            <span asp-validation-for="ZipCode"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Country">Country *</label>
                        <input asp-for="Country" required />
                        <span asp-validation-for="Country"></span>
                    </div>
                    
                    <h2>Payment Information</h2>
                    <div class="form-group">
                        <label asp-for="CardNumber">Card Number *</label>
                        <input asp-for="CardNumber" placeholder="1234 5678 9012 3456" required />
                        <span asp-validation-for="CardNumber"></span>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="ExpiryDate">Expiry Date *</label>
                            <input asp-for="ExpiryDate" placeholder="MM/YY" required />
                            <span asp-validation-for="ExpiryDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CVV">CVV *</label>
                            <input asp-for="CVV" placeholder="123" required />
                            <span asp-validation-for="CVV"></span>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-large">Place Order</button>
                </form>
            </div>
            
            <div class="checkout-summary">
                <h2>Order Summary</h2>
                @foreach (var item in Model.Cart.Items)
                {
                    <div class="checkout-item">
                        <img src="@item.ImageUrl" alt="@item.Name" />
                        <div>
                            <p><strong>@item.Name</strong></p>
                            <p>@item.Size | @item.Color</p>
                            <p>Qty: @item.Quantity Ã— $@item.Price.ToString("F2")</p>
                        </div>
                    </div>
                }
                <div class="checkout-totals">
                    <div class="summary-row">
                        <span>Subtotal:</span>
                        <span>$@Model.Cart.Subtotal.ToString("F2")</span>
                    </div>
                    <div class="summary-row">
                        <span>Tax:</span>
                        <span>$@Model.Cart.Tax.ToString("F2")</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total:</span>
                        <span>$@Model.Cart.Total.ToString("F2")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

