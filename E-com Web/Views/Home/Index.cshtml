<!-- Featured Products Section -->
<section id="featured-products" class="featured-products-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Featured Products</h2>
            <p class="section-subtitle">Handpicked selections from our premium collection</p>
        </div>
        <div class="products-grid">
            @foreach (var shoe in Model.Take(8))
            {
                <div class="product-card-modern">
                    <div class="product-image-wrapper">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@shoe.Id">
                            <img src="@shoe.ImageUrl" alt="@shoe.Name" class="product-image" />
                        </a>
                        <div class="product-overlay">
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="quick-add-form">
                                <input type="hidden" name="shoeId" value="@shoe.Id" />
                                <input type="hidden" name="size" value="@shoe.Sizes.FirstOrDefault()" />
                                <input type="hidden" name="color" value="@shoe.Colors.FirstOrDefault()" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn-quick-add">Quick Add</button>
                            </form>
                        </div>
                        @if (shoe.Rating.HasValue && shoe.Rating.Value >= 4.5m)
                        {
                            <span class="product-badge">Best Seller</span>
                        }
                    </div>
                    <div class="product-info-modern">
                        <p class="product-brand">@shoe.Brand</p>
                        <h3 class="product-name">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@shoe.Id">@shoe.Name</a>
                        </h3>
                        <div class="product-rating">
                            @if (shoe.Rating.HasValue)
                            {
                                <div class="stars">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <span class="star @(i < (int)shoe.Rating.Value ? "filled" : "")">‚òÖ</span>
                                    }
                                </div>
                                <span class="rating-text">@shoe.Rating.Value.ToString("F1") (@shoe.ReviewCount)</span>
                            }
                        </div>
                        <div class="product-footer">
                            <span class="product-price">$@shoe.Price.ToString("F2")</span>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@shoe.Id" class="btn-view-details">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="section-cta">
            <a asp-controller="Products" asp-action="Index" class="btn-view-all">View All Products</a>
        </div>
    </div>
</section>

